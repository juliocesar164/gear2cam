<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:weightSum="1.0"
    android:layout_gravity="center"
    tools:context="com.gear2cam.official.AuthenticatedFragmentPortrait">


    <LinearLayout
        android:layout_weight=".5"
        android:layout_width="0dip"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_vertical"
        android:layout_height="fill_parent">
        <TextView
            android:id="@+id/instructionsOrLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:autoLink="web"
            android:linksClickable="true"
            android:fontFamily="fonts/FjallaOne-Regular.ttf"
            android:shadowColor="@color/Shadow"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:textColor="@color/White"
            android:paddingTop="@dimen/activity_vertical_margin_large"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingRight="20dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/instructionsOrLink2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_gear"
            android:autoLink="web"
            android:linksClickable="true"
            android:textColor="@color/White"
            android:shadowColor="@color/Shadow"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:paddingRight="20dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <ImageView
        android:layout_weight=".5"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:src="@drawable/logo"
        android:layout_gravity="center" />
</LinearLayout>